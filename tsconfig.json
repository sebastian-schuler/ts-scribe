{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "types": [
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}