{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "./lib",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES6",
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "types": [
            "vitest/globals",
            "node"
        ],
        "lib": [
            "esnext"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}