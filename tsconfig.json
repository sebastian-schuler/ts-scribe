{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "vitest/globals",
            "node"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}